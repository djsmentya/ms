<% if flash[:notice] %>
  <div class="alert alert-warning">
      <%= flash[:notice] %>
  </div>
<% end %>


<div class="row justify-content-md-center mt-5">
  <div class="col col-12 col-md-6">
    <div class="card h-100">
      <div class="card-header">
         Import Gmail message
      </div>
      <div class="card-body">
        <div id="count">
          Starting...
        </div>
        <div class="progress">
          <div id="progress-bar" class="progress-bar bg-success" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <hr>
        <div class="row justify-content-center align-items-center">
          <a href="/a/message" class="btn btn-primary btn-lg" data-turbo="false"> Go to Messages</a>
        </div>
      </div>
    </div>
  </div>
</div>

